#!/bin/bash
set -e

export COMPOSER_HOME=/usr/local/composer
/usr/local/bin/composer global require drush/drush:8.*
export PATH="/usr/local/composer/vendor/bin:/usr/local/composer/vendor/drush/drush:$PATH"
export mUID=`id -u`
export mGID=`id -g`
export LINE="ssh-user:x:$mUID:$mGID::/var/www/html:/bin/bash"
echo $LINE
echo >>/etc/passwd $LINE
