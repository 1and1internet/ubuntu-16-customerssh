#!/bin/bash
set -e

export mUID=`id -u`
export mGID=`id -g`
export LINE="ssh-user:x:$mUID:$mGID::/var/www:/bin/bash"
echo >>/etc/passwd $LINE
echo "ssh-user:x:${mGID}" >> /etc/group

[ -z $WORKDIR ] && exit 0
if [ ! -f "${WORKDIR}/.bashrc" ]; then
  cat << 'EOF' > ${WORKDIR}/.bashrc
  export PATH="/usr/local/composer/vendor/bin:/usr/local/composer/vendor/drush/drush:$PATH"
  export PS1='\u:\w\$ '
  export TERM=xterm-256color
EOF
fi
